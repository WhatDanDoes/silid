    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
    <link rel="manifest" href="/favicons/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/favicons/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <% if (process.env.NODE_ENV === 'staging') { %>
      <% include _partials/matomo %>
    <% } %>
  </head>
  <body>
    <header>
      <img src="images/sil-logo.svg">
      <h1>Identity</h1>
    </header>
    <main>
      <section class="copy">
        <h1><a id="login-link" class="login-button" href="/login">Login</a></h1>
      </section>
      <h2>You are being logged out of all SIL applications</h2>
      <h1>Cheerio!</h1>
      <% for (let url of logoutUrls) { %>
        <iframe
          src="<%= url %>"
          style="width:0;height:0;border:0; border:none;"
          onload="loaded(this)"
        >
          Danger! Your browser doesn't support iFrames. Your other SIL applications are still logged in. Logout manually or clear your browser cache/cookies.
        </iframe>
      <% } %>
    </main>
    <script>
      var count = 0;
      var dest = location.search.replace(/^.*?\=/, '');

      function loaded(i) {
        count++;
        if (count === <%= logoutUrls.length %>) {
          if (dest) {
            window.location.replace(dest);
          }
          else {
            window.location.replace('/');
          }
        }
      };
    </script>
  </body>
</html>
